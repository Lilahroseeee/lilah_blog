{
  "name": "Jekyll Blog Development",
  "image": "mcr.microsoft.com/devcontainers/jekyll:latest",
  
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  
  "customizations": {
    "vscode": {
      "extensions": [
        "davidanson.vscode-markdownlint",
        "shd101wyy.markdown-preview-enhanced"
      ]
    }
  },
  
  // installing gems
  "postCreateCommand": "bundle install",
  
  // Automatically forward the port used by jekyll serve
  "forwardPorts": [4000],
  
  // Run the Jekyll server when the Codespace starts
  "postAttachCommand": "bundle exec jekyll serve --host 0.0.0.0 --port 4000"
}
